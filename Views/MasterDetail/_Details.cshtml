@model CrudWithSpSap.Models.Applicant



<div class="col-11 mx-auto pt-0">

    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white" style="height:45px;">
            <h4>View Applicant</h4>
        </div>

        <form id="ApplicantForm" enctype="multipart/form-data" asp-action="Details">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"><b>Date</b></label>
                        <input asp-for="Date" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"><b>Name</b></label>
                        <input asp-for="Name" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"><b>Gender</b></label>
                        <input asp-for="Gender" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"><b>Age</b></label>
                        <input asp-for="Age" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Qualification" class="control-label"><b>Qualification</b></label>
                        <input asp-for="Qualification" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TotalExperience" class="control-label"><b>Total Experience</b></label>
                        <input asp-for="TotalExperience" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6 btn-group">
                    <div class="form-group">
                        <label asp-for="ProfilePhoto" class="control-label"><b>Profile Photo</b></label>
                        <img src="~/Images/@Model.PhotoUrl" class="img-fluid" height="80" width="80" />
                    </div>
                </div>


                <div class="col-md-12">
                    <table id="ExpTable" class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>CompanyName</th>
                                <th>Designation</th>
                                <th>YearsWorked</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Experience.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.Experience[i].CompanyName" class="form-control-plaintext" readonly />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experience[i].Designation" class="form-control-plaintext" readonly />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experience[i].YearsWorked" class="form-control-plaintext" readonly />
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

                <input type="hidden" id="hdnLastIndex" value="0" />

                <div class="col-12">
                    <div class="col-6 form-group text-right p-2">
                        <a href="javascript:void(0);" class="btn btn-sm btn-info" onclick="editApplicant(@Model.Id)" style="background:#ADD8E6; color:black">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    </div>
                </div>

            </div>
        </form>

    </div>

</div>

